<!DOCTYPE html>
<head>
    <% include ./partials/head %>
</head>
<body class="rockola-container">
    <header>
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper nav-rockola center">
                    <a href="#!" class="logo">Rockola</a>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <div class="row">

            <div class="col s12">
                <div class="form-signin">
                    <span class="white-text">
                        <h1 class="logo">Bienvenido!</h1>
                    </span>
                    <div class="row">

                        <div class="col s6">

                            <div class="card">
                                <div class="card-image waves-effect waves-block waves-light">
                                    <img class="activator rockola-imagen-cliente" src="../img/cliente.jpg">
                                </div>
                                <div class="card-content">
                                    <span class="card-title activator grey-text text-darken-4">
                                        <b>Cliente</b>
                                        <i class="material-icons right">more_vert</i></span>
                                </div>
                                <div class="card-reveal">
                                    <span class="card-title grey-text text-darken-4">
                                        Login Cliente
                                        <i class="material-icons right">close</i></span>

                                    <% include ./partials/login-cliente %>

                                </div>
                            </div>

                        </div>

                        <div class="col s6">
                            <div class="card">
                                <div class="card-image waves-effect waves-block waves-light">
                                    <img class="activator rockola-imagen-servidor" src="../img/servidor.jpg">
                                </div>
                                <div class="card-content">
                                    <span class="card-title activator grey-text text-darken-4">
                                        <b>Reproductor</b>
                                        <i class="material-icons right">more_vert</i></span>
                                </div>
                                <div class="card-reveal">
                                    <span class="card-title grey-text text-darken-4">Reproductor<i class="material-icons right">close</i></span>

                                    <% include ./partials/login-rockola %>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/lib/jquery-2.2.3.min.js" type="text/javascript"></script>
    <script src="js/app/rockola.js"></script>
    <script src="js/app/ui/ui.js"></script>
    <script src="js/app/ui/login/login.js"></script>
    <script src="js/app/service/service.js"></script>
    <script src="js/app/service/reproductor/reproductor.js"></script>
    <script src="js/lib/socket.io.js"></script>

    <script>
        var socket = io();
        $('#js-boton-logear').on('click', function () {
            socket.emit('logueo', $('#js-input-usuario').val());
        });
    </script>

</body>
