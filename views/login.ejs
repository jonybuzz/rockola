<!DOCTYPE html>
<head>
    <% include ./partials/head %>
</head>
<body class="rockola-container">
    <header>
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper violeta center">
                    <a href="#!" class="logo">Rockola</a>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <div class="row">

            <div class="col s12">
                <div class="form-signin">
                    <span class="white-text">
                        <h1 class="logo">Bienvenido!</h1>
                    </span>
                    
                    <div class="row">

                        <div class="col s12 m6">

                            <div class="card rockola-cliente">
                                <div class="card-image waves-effect waves-block waves-light">
                                    <img class="activator" src="../img/cliente.jpg">
                                </div>
                                <div class="card-content">
                                    <span class="card-title activator grey-text text-darken-4">
                                        <b>Agregar temas</b>
                                        <i class="material-icons right">more_vert</i></span>
                                </div>
                                <div class="card-reveal">
                                    <span class="card-title grey-text text-darken-4">
                                        Login
                                        <i class="material-icons deactivator right">close</i></span>

                                    <% include ./partials/login-cliente %>

                                </div>
                            </div>

                        </div>

                        <div class="col s12 m6">
                            <div class="card rockola-reproductor">
                                <div class="card-image waves-effect waves-block waves-light">
                                    <img class="activator rockola-imagen-servidor" src="../img/servidor.png">
                                </div>
                                <div class="card-content">
                                    <span class="card-title activator grey-text text-darken-4">
                                        <b>Reproducir</b>
                                        <i class="material-icons right">more_vert</i></span>
                                </div>
                                <div class="card-reveal">
                                    <span class="card-title grey-text text-darken-4">Eleg√≠ la rockola<i class="material-icons deactivator right">close</i></span>

                                    <% include ./partials/login-rockola %>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/app/rockola.js"></script>
    <script src="js/app/ui/ui.js"></script>
    <script src="js/app/ui/login/login.js"></script>
    <script src="js/app/service/service.js"></script>
    <script src="js/app/service/reproductor/reproductor.js"></script>

</body>
