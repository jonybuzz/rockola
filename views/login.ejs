<!DOCTYPE html>
<head>
    <% include ./partials/head %>
</head>
<body class="rockola-container">
    <header>
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper nav-rockola center">
                    <a href="#!" class="logo">Rockola</a>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <div class="row">

            <div class="col s12">
                <div class="form-signin">
                    <span class="white-text">
                        <h1 class="logo">Bienvenido!</h1>
                    </span>
                    <div class="row">
                        <div class="form-inline">
                            <div class="form-group">

                                <div class="input-field col s12 m7 l9">
                                    <i class="material-icons prefix">account_circle</i>
                                    <input id="icon_prefix" name="login" type="text" class="rockola-input-login validate form-control" id="js-input-usuario" required>
                                    <label for="icon_prefix">Ingres√° tu nombre</label>
                                </div>

                                <div class="input-field col s12 m5 l3 center-align">
                                    <button class="btn waves-effect waves-light" id="js-boton-logear" type="submit" name="action">Comenzar!
                                        <i class="material-icons right">fast_forward</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/lib/jquery-2.2.3.min.js" type="text/javascript"></script>
    <script src="js/app/rockola.js"></script>
    <script src="js/app/ui/ui.js"></script>
    <script src="js/app/ui/login/login.js"></script>
    <script src="js/lib/socket.io.js"></script>

    <script>
        var socket = io();
        $('#js-boton-logear').on('click', function () {
            socket.emit('logueo', $('#js-input-usuario').val());
        });
    </script>

</body>
