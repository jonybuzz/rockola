<!DOCTYPE html>
<head>
    <% include ./partials/head %>
</head>
<body class="rockola-container">
    <header>
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper nav-rockola center">
                    <a href="#!" class="logo">Rockola</a>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <div class="row">

            <div class="col s12 m7">
                <div class="row">
                    <div class="col s12">
                        <h3>Búsqueda</h3>
                        <div class="form-inline">
                            <div class="form-group">

                                <div class="input-field col s12 m6 l8">
                                    <i class="material-icons prefix">queue_music</i>
                                    <input id="icon_prefix" class="rockola-busqueda" id="busqueda" type="text" class="validate">
                                    <label for="icon_prefix">Ingresá el tema</label>
                                </div>

                                <div class="input-field col s12 m6 l4 center-align">
                                    <button class="btn waves-effect waves-light rockola-boton-buscar-tema" id="js-boton-enviar" type="submit" name="action">Buscar
                                        <i class="material-icons right">search</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col s12">
                        <div id="grid" class="grid listado collection">

                        </div>
                    </div>
                </div>
            </div>

            <div class="listado col s12 m5">
                <span class="white-text">
                    <h3>
                        Listado de Temas
                    </h3>
                </span>
                <ul class="collection lista-de-temas lista-de-temas-clientes" id="body-lista-reproduccion">
                </ul>
            </div>
        </div>

    </div>
    <script src="/js/lib/jquery-2.2.3.min.js" type="text/javascript"></script>
    <script src="/js/lib/jsrender.min.js" type="text/javascript"></script>
    <script src="js/lib/socket.io.js"></script>

    <script src="js/app/rockola.js"></script>
    <script src="js/app/service/service.js"></script>
    <script src="js/app/service/tema/tema.js"></script>
    <script src="js/app/ui/ui.js"></script>
    <script src="js/app/ui/cliente/cliente.js"></script>
</body>

<script id="bodyListaTemplate" type="text/html" >
    <li class="collection-item">
        <div class="row">
            <div class="col s4">
                <img class="responsive-img" src="{{:thumbnail}}">
            </div>
            <div class="col s8">
                <div class="col m12">
                    <span class="title">{{:titulo}}</span>
                    <span></span>
                </div>
                <div class="col m12">
                    <div class="chip ">{{:nombreUsuario}}</div>
                </div>
            </div>
        </div>
    </li>
</script>

<script id="bodyGridTemplate" type="text/html" >
    <div class="col m6 l4">
        <div class="card small z-depth-3">
            <div class="card-image waves-effect waves-block waves-light">
                <img id="{{:video.videoId}}" class="grid-tema responsive-img" src="{{:video.urlImagen}}" alt="{{:video.titulo}}">
            </div>
            <div class="card-content">
                <span class="card-title activator"><p>{{:video.titulo}}</p></span>
            </div>
        </div>
    </div>
</script>

<script src="js/app/sockets/cliente/cliente.js"></script>