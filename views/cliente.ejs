<!DOCTYPE html>
<head>
    <% include ./partials/head %>
</head>
<body class="rockola-container">
    
    <% include ./partials/navbar %>

    <div class="container">
        <div class="row">
            <div class="col s12 m7">
                <div class="row fila-contenedor-busqueda">
                    <div class="col s12">
                        <h3>Búsqueda</h3>
                        <div class="form-inline">
                            <div class="form-group">
                                <div class="input-field col s12 m7 l9 center">
                                    <i class="material-icons prefix">queue_music</i>
                                    <input id="icon_prefix" class="rockola-busqueda busqueda-tema" id="busqueda-tema" type="text" class="validate">
                                    <label for="icon_prefix">Ingresá tu búsqueda</label>
                                </div>
                                <div class="input-field col s12 m5 l3 center">
                                    <button class="btn violeta waves-effect waves-light rockola-boton-buscar-tema" id="js-buscar-tema" type="submit" name="action">
                                        <i class="material-icons">search</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row fila-criterio-de-busqueda">
                    <div class="col l12 contenedor-criterio-busqueda">
                        <p>Criterio de Búsqueda:
                            <input class="filled-in-box" name="group1" type="radio" id="busqueda-por-tema" checked/>
                            <label for="busqueda-por-tema">Temas</label>
                            <input class="filled-in-box" name="group1" type="radio" id="busqueda-por-playlist" />
                            <label for="busqueda-por-playlist">Playlist</label>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m12 l6 center">
                        <ul id="paginado-playlist" class="pagination">
                        </ul>
                    </div>
                    <div class="col s12 m12 l6 center">
                        <button class="btn waves-effect waves-light boton-agregar-todos hide" type="submit" name="action">Agregar Todos
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    <div class="col s12">
                        <div id="grid" class="grid listado collection">
                        </div>
                    </div>
                </div>
            </div>
            <div class="listado col s12 m5">
                <h3>
                    Lista de Temas
                </h3>
                <ul class="collection lista-de-temas lista-de-temas-clientes" id="body-lista-reproduccion">
                </ul>
            </div>
        </div>

    </div>
    <script src="/js/lib/pagination.min.js" type="text/javascript"></script>
    <script src="js/lib/socket.io.js"></script>

    <script src="js/app/rockola.js"></script>
    <script src="js/app/service/service.js"></script>
    <script src="js/app/service/tema/tema.js"></script>
    <script src="js/app/ui/ui.js"></script>
    <script src="js/app/ui/cliente/cliente.js"></script>
</body>

<script id="bodyListaTemplate" type="text/html" >
    <li class="collection-item">
        <div class="row">
            <div class="col s4">
                <img class="responsive-img" src="{{:thumbnail}}">
            </div>
            <div class="col s8">
                <div class="col m12">
                    <p class="title">{{:titulo}}</p>
                    <span></span>
                </div>
                <div class="col m12">
                    <div class="chip ">{{:nombreUsuario}}</div>
                </div>
            </div>
        </div>
    </li>
</script>

<script id="resultadosTemasTemplate" type="text/html" >
    <div class="col m6 l3">
        <div class="card small z-depth-3">
            <div class="card-image waves-effect waves-block waves-light">
                <img id="{{:video.videoId}}" class="grid-tema responsive-img" src="{{:video.urlImagen}}" alt="{{:video.titulo}}">
            </div>
            <div class="card-content">
                <span class="card-title activator"><p>{{:video.titulo}}</p></span>
            </div>
        </div>
    </div>
</script>

<script src="js/app/sockets/cliente/cliente.js"></script>