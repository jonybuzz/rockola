
<head>
    <% include ./partials/head %>
</head>
<body class="body-image">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="logo">Rockola</h1>
            </div>
            <div class="col-md-5">
                <h1>Lista</h1>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-6">
                <div class="form-inline">
                    <div class="form-group col-md-9">
                        <input type="text" class="form-control" id="busqueda" placeholder="Busqueda por banda"/>
                    </div>
                    <button class="btn btn-primary" id="js-boton-enviar">Buscar!</button>
                </div>
                <div id="grid" class="col-md-12 grid listado">

                </div>
            </div>
            <div class="listado col-md-5">
                <table class="table" id="lista-reproduccion">
                    <thead>
                        <tr>
                            <th>Lista temas en reproducci√≥n</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="body-lista-reproduccion">
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <script src="/js/lib/jquery-2.2.3.min.js" type="text/javascript"></script>
    <script src="/js/lib/jsrender.min.js" type="text/javascript"></script>

    <script src="js/app/rockola.js"></script>
    <script src="js/app/service/service.js"></script>
    <script src="js/app/service/tema/tema.js"></script>
    <script src="js/app/ui/ui.js"></script>
    <script src="js/app/ui/cliente/cliente.js"></script>
</body>

<script id="bodyListaTemplate" type="text/html" >
    <tr>
        <td>
            <img src="{{:thumbnail}}">
        </td>
        <td>
            <h4>{{:titulo}}</h4>
        </td>
        <td>
            <h5 class="nombre-usuario">{{:nombreUsuario}}</h5>
        </td>
    </tr>
</script>

<script id="bodyGridTemplate" type="text/html" >
    <div class="col-md-3" >
        <div calss="imagen">
            <img id="{{:video.videoId}}" class="grid-tema" src="{{:video.urlImagen}}" alt="{{:video.titulo}}">
        </div>
        <div class="titulo">
            <span>{{:video.titulo}}</span>
        </div>
    </div>

</script>

<script src="js/lib/socket.io.js"></script>

<script>
  var socket = io();
    $('#js-boton-enviar').on('click', function(){
      socket.emit('agregarTema', $('#busqueda').val());
    })
</script>
