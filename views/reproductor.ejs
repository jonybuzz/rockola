<!DOCTYPE html>
<head>
    <% include ./partials/head %>
</head>
<body class="rockola-container">
    <header>
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper nav-rockola center">
                    <a href="#!" class="logo">Rockola</a>
                </div>
            </nav>
        </div>
    </header>
    <main>
        <br>
        <div class="container-fluid container-rockola">
            <div class="row">
                <div class="col s12 l7">
                    <div class="row">
                        <div class="video-container">
                            <div id="player"></div>
                        </div>
                    </div>
                    <div class="row right">
                        <div id="js-btn-siguiente" class="col s12">
                            <a class="waves-effect waves-light btn purple"><i class="material-icons right">fast_forward</i>siguiente</a>
                        </div>
                    </div>
                </div>
                <div class="col s12 l5">
                    <div class="row">
                        <div class="col s6">
                            <span class="white-text text-darken-2">
                                <h3>
                                    Listado de Temas
                                </h3>
                            </span>
                        </div>
                        <div class="input-field col s4 m4 right">
                            <select id="tiempo-de-reproduccion">
                                <option value="300">5 Minutos</option>
                                <option value="600">10 Minutos</option>
                                <option value="900">15 Minutos</option>
                                <option value="0">Indefinido</option>
                            </select>
                            <label>Tiempo de Reproducci√≥n</label>
                        </div>                        
                    </div>
                    <ul class="collection lista-de-temas" id="body-lista-reproductor">
                    </ul>
                </div>
            </div>
        </div> 
    </main>

    <script src="js/lib/socket.io.js"></script>

    <script src="/js/app/rockola.js" type="text/javascript"></script>
    <script src="/js/app/service/service.js" type="text/javascript"></script>
    <script src="/js/app/service/tema/tema.js" type="text/javascript"></script>
    <script src="/js/app/ui/ui.js" type="text/javascript"></script>
    <script src="/js/app/ui/reproductor/reproductor.js" type="text/javascript"></script>
</body>

<script id="bodyListaTemplate" type="text/html" >
    <li class="collection-item">
        <div class="row">
            <div class="col s4">
                <img class="responsive-img" src="{{:thumbnail}}">
            </div>
            <div class="col s8">
                <div class="col m12">
                    <span class="title">{{:titulo}}</span>
                    <span></span>
                </div>
                <div class="col m12">
                    <div class="chip ">{{:nombreUsuario}}</div>
                </div>
            </div>
        </div>
    </li>
</script>


<script src="js/app/sockets/reproductor/reproductor.js"></script>
